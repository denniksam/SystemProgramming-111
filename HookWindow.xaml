<Window x:Class="SystemProgramming_111.HookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming_111"
        mc:Ignorable="d"
        Title="HookWindow" Height="450" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="StartKbHook" Click="StartKbHook_Click" Margin="10" Content="Start Keyboard Hook"/>
            <Button x:Name="StopKbHook"  Click="StopKbHook_Click"  Margin="10" Content="Stop Keyboard Hook"/>
        </StackPanel>
        <TextBlock x:Name="HookLogs"/>
    </StackPanel>
</Window>
